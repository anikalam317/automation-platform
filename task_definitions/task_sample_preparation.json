{
  "id": "task-sample-prep",
  "name": "Sample Preparation",
  "category": "preparative",
  "description": "Prepare samples for analysis including dilution, pH adjustment, and filtration",
  "workflow_position": "initial",
  "compatible_instruments": [
    "sample-prep-01",
    "liquid-handler-01"
  ],
  "parameters": {
    "sample_id": {
      "type": "string",
      "label": "Sample ID",
      "default": "auto-generated",
      "required": true,
      "validation": "^[A-Za-z0-9_-]+$"
    },
    "volume": {
      "type": "number",
      "label": "Sample Volume (mL)",
      "min": 1.0,
      "max": 50.0,
      "default": 10.0,
      "required": true
    },
    "dilution_factor": {
      "type": "number",
      "label": "Dilution Factor",
      "min": 1.0,
      "max": 10.0,
      "default": 2.0,
      "required": true
    },
    "target_ph": {
      "type": "number",
      "label": "Target pH",
      "min": 2.0,
      "max": 12.0,
      "default": 7.0,
      "required": true
    },
    "timeout": {
      "type": "number",
      "label": "Timeout (seconds)",
      "min": 60,
      "max": 600,
      "default": 300,
      "required": false
    }
  },
  "quality_checks": [
    "volume_accuracy",
    "ph_verification",
    "sample_clarity"
  ],
  "outputs": [
    "actual_volume",
    "actual_ph", 
    "recovery_percent",
    "quality_status"
  ],
  "prerequisites": [],
  "estimated_duration_seconds": 65,
  "success_criteria": {
    "recovery_percent": ">= 95.0",
    "ph_accuracy": "+/- 0.1",
    "volume_accuracy": "+/- 2.0%"
  },
