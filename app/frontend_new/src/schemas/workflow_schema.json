{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Schema",
  "description": "Schema for validating Laboratory Automation Framework workflows",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[\\w\\s\\-\\.]+$",
      "description": "Name of the workflow"
    },
    "author": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Author of the workflow"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional description of the workflow"
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "$ref": "#/definitions/task"
      },
      "description": "Array of tasks in execution order"
    }
  },
  "required": ["name", "author", "tasks"],
  "definitions": {
    "task": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "description": "Name of the task"
        },
        "service_id": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "ID of the service/instrument to use"
        },
        "service_parameters": {
          "type": ["object", "null"],
          "description": "Parameters specific to the service/instrument",
          "additionalProperties": true
        },
        "order_index": {
          "type": "integer",
          "minimum": 0,
          "description": "Execution order of the task (optional, will be set automatically)"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Names of tasks this task depends on"
        },
        "timeout": {
          "type": "integer",
          "minimum": 60,
          "maximum": 86400,
          "description": "Task timeout in seconds (optional)"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5,
          "description": "Number of retries on failure (optional)"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}